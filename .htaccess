# ScrapeBreaker - .htaccess
# Version 1.3.4

# Control direct access to certain files.
# Apache 2.2 and 2.4 compatible

# readme.txt - Deny
<Files readme.txt>
	# Apache 2.2
	<IfModule !mod_authz_core.c>
		Deny from all
	</IfModule>

	# Apache 2.4
	<IfModule mod_authz_core.c>
		Require all denied
	</IfModule>
</Files>

# Language files - Deny
<FilesMatch "^.*\.(mo|pot)$">
	<IfModule !mod_authz_core.c>
		Deny from all
	</IfModule>

	<IfModule mod_authz_core.c>
		Require all denied
	</IfModule>
</FilesMatch>
